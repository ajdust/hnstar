{
  "scripts": {
    "watch-ts": "./node_modules/typescript/bin/tsc --watch",
    "build": "NODE_ENV=development node ./node_modules/webpack-cli/bin/cli.js build",
    "release": "NODE_ENV=production node ./node_modules/webpack-cli/bin/cli.js build",
    "watch": "NODE_ENV=development node ./node_modules/webpack-cli/bin/cli.js watch"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "date-fns": "^2.17.0",
    "dexie": "^3.0.3",
    "immutability-helper": "^3.1.1",
    "react": "16.14.0",
    "react-bootstrap": "1.5.2",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "@types/react": "16.14.5",
    "@types/react-bootstrap": "0.32.25",
    "@types/react-dom": "16.9.11",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.1.0",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "indent": "off",
      "semi": "off",
      "quotes": "off",
      "space-before-function-paren": "off",
      "no-undef": "off",
      "no-use-before-define": "off",
      "comma-dangle": "off"
    }
  }
}
